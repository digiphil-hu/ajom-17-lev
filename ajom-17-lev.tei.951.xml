						<date when="1856-06-01">1856. junius elseje</date>
						 tüzetett ki, s bejött három
						munka, melyek megbirálására Dr. 
						<persName>Kovács Gyula</persName>
						 ,
						<persName>
							 Kovács János 
							<idno corresp="Kovács János" type="ITIdata">Q243690</idno>
						</persName>
